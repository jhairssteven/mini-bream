<launch>
    <arg name="name" default="default"/> <!-- The name of the mission (this should be the directory's name where the mission.csv file is saved -->
    
    <!-- Vehicle-specific parameters to load -->
    <!-- Options are: mini_bream, bream, ground_vehicle -->
    <arg name="vehicle" default="mini_bream"/>

    <!-- <param name="mission" value="$(find backseat)/src/Missions/$(arg name)/mission.csv" /> -->
    <param name="mission" value="$(find mission_planner)/missions/$(arg name)/mission.csv" />
    <rosparam file="$(find backseat)/src/params/$(arg vehicle).yaml"/>
    
    <node name="path_planner" pkg="backseat" type="PathPlannerNode.py" output="screen"/>
</launch>
